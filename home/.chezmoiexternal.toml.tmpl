{{- if .rootless }}
{{ $chezmoiVersion := "v2.29.4" }}
# binaries
[".local/bin/chezmoi"]
    type = "file"
    executable = true
    url = "https://github.com/twpayne/chezmoi/releases/download/{{ $chezmoiVersion }}/chezmoi-v{{ $chezmoiVersion }}-{{ .chezmoi.os }}-{{ .chezmoi.arch }}.tar.gz"
    filter = {
        command = "tar",
        args = ["--extract", "--file", "/dev/stdin", "--gzip", "--to-stdout", "chezmoi/chezmoi"]
    }
[".local/bin/nvim"]
    type = "file"
    executable = true
    url = "https://github.com/neovim/neovim/releases/download/stable/nvim.appimage"
{{- end }}
